# Function ot print name x times
def printNameXTimes(name, x):
	if decision == 1:
		for i in range(1, x + 1):
			print(str(i) + " ")
			print(name*i)
	else:
		count = x
		while(count > 0):
			print(str(count) + " ")
			print(name*count)
			count -= 1

# Main function
def main():
	name = input("Enter your name: ")
	x = int(input("Enter number of iterations: "))
	printNameXTimes(name, x)


